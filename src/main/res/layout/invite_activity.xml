<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueBg"
    android:orientation="vertical" >
    <View
        android:id="@+id/imageView3"
        android:layout_width="851dp"
        android:layout_height="429dp"
        android:layout_marginBottom="21dp"
        android:background="@drawable/rectangle_white_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/txtUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="URL: "
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="238dp" />

    <TextView
        android:id="@+id/txtSubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subject: "
        tools:layout_editor_absoluteY="342dp" />

    <TextView
        android:id="@+id/txtMeetingId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meeting ID: "
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="32dp" />

    <TextView
        android:id="@+id/txtPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password: "
        tools:layout_editor_absoluteY="59dp" />

    <TextView
        android:id="@+id/txtRawPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Raw Password: "
        tools:layout_editor_absoluteY="95dp" />


    <EditText
        android:id="@+id/edtText"
        android:layout_width="399dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textMultiLine"
        tools:layout_editor_absoluteX="545dp"
        tools:layout_editor_absoluteY="59dp"></EditText>

    <ImageView
        android:id="@+id/qrcodeImageview"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginStart="253dp"
        android:layout_marginTop="71dp"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.261"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.478"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/qrcodeImageview"
        tools:layout_editor_absoluteX="0dp">

        <EditText
            android:id="@+id/urlEditText"
            android:layout_width="397dp"
            android:layout_height="50dp"
            android:layout_marginStart="228dp"
            android:layout_marginEnd="30dp"
            android:layout_weight="1"
            android:ems="10"
            android:textStyle="bold"
            android:textColor="@color/blueBtn"
            android:background="@color/blueBg"
            android:inputType="textPersonName"
            android:text="" />

        <Button
            android:id="@+id/copyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="208dp"
            android:layout_weight="0.5"
            android:background="@drawable/rec_btn"
            android:text="Copy"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/copyImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Copy Image"
        tools:layout_editor_absoluteX="837dp"
        tools:layout_editor_absoluteY="11dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shared Meeting"
        android:textColor="@color/blueBtn"
        android:textStyle="bold"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/qrcodeImageview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.754" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="36dp"
        android:background="@drawable/ic_rectangle_614"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="75dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView

                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_ellipse_73" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:text="MEDI-POD"
                android:textColor="@color/blueBtn"

                android:textSize="30sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
